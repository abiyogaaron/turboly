.container-fluid
    .row
        .col-md-4.col-sm-12.col-lg-4.mx-auto
            .card.card-form
                .card-body
                    -#%h2{:class => "text-center lead"} Login here
                    = image_tag("login-icon.png", class: "rounded mx-auto d-block")
                    %br
                    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
                        .form-group
                            = f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: "Enter Your email address"
                        .form-group
                            = f.password_field :password, class: "form-control", autocomplete: "current-password",placeholder: "Enter your password"
                        = render 'layouts/alerts'
                        - if devise_mapping.rememberable?
                            .form-group.form-check
                                = f.check_box :remember_me, class: "form-check-input "
                                = f.label :remember_me, class: "rememberme"
                        = f.submit "Log in", class: "btn btn-primary btn-block"
                        %hr
                        = render "devise/shared/links"





